{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2015",
        "rootDir": "src",
        "outDir": "lib",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "declaration": true,
        "newLine": "LF",
        "resolveJsonModule": true
    },
    "exclude": [
        "lib",
        "src/test/**/*.spec.ts"
    ],
    "include": [
        "src/**/*.json",
        "src/**/*.ts"
    ]
}

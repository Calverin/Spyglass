{
  "name": "@spyglassmc/spyglass",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "init": "lerna bootstrap --hoist && npm run build",
    "build": "tsc -b packages",
    "watch": "tsc -b -w packages",
    "commit": "gitmoji -c",
    "con": "cd contributors && all-contributors generate && cd ..",
    "lint": "eslint packages/*/{src,test}/**/*.ts",
    "lint:fix": "eslint --fix packages/*/{src,test}/**/*.ts",
    "codecov": "lerna run codecov",
    "release": "lerna run release",
    "release:dry": "lerna run release:dry",
    "test": "lerna run test",
    "test:w": "lerna run test:w"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@types/power-assert": "^1.5.3",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "all-contributors-cli": "^6.17.1",
    "circular-dependency-plugin": "^5.2.0",
    "codecov": "^3.7.2",
    "eslint": "^7.15.0",
    "espower-typescript": "^9.0.2",
    "gitmoji-cli": "^3.2.15",
    "lerna": "^3.22.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "power-assert": "^1.6.1",
    "semantic-release": "^17.3.0",
    "semantic-release-gitmoji": "^1.3.4",
    "snap-shot-it": "^7.9.3",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SPYGlassMC/SPYGlass.git"
  },
  "homepage": "https://spyglassmc.com",
  "bugs": {
    "url": "https://github.com/SPYGlassMC/SPYGlass/issues"
  }
}

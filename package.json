{
	"name": "@spyglassmc/root",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"build": "tsc -b packages",
		"watch": "tsc -b -w packages",
		"commit": "gitmoji -c",
		"con": "cd contributors && all-contributors generate && cd ..",
		"lint": "eslint packages/*/{src,test}/**/*.ts",
		"lint:fix": "eslint --fix packages/*/{src,test}/**/*.ts",
		"test": "nyc mocha"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.11.2",
		"@types/webpack": "^4.41.22",
		"@typescript-eslint/eslint-plugin": "^4.9.1",
		"@typescript-eslint/parser": "^4.9.1",
		"all-contributors-cli": "^6.17.1",
		"circular-dependency-plugin": "^5.2.0",
		"codecov": "^3.7.2",
		"eslint": "^7.20.0",
		"gitmoji-cli": "^3.2.18",
		"mocha": "^8.3.0",
		"nyc": "^15.1.0",
		"snap-shot-it": "^7.9.6",
		"source-map-support": "^0.5.19",
		"ts-loader": "^8.0.11",
		"ts-node": "^9.0.0",
		"typescript": "^4.2.1-rc",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"config": {
		"snap-shot-it": {
			"useRelativePath": true,
			"sortSnapshots": true
		}
	},
	"workspaces": [
		"packages/**"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/SPYGlassMC/SPYGlass.git"
	},
	"homepage": "https://spyglassmc.com",
